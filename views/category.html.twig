<html>
    <head>
        <title>To Do List</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
            <h1>{{ category.getName}}</h1>

            {% if tasks is not empty %}
                <p>Here are the tasks:</p>
                <ul>
                    {% for task in tasks %}
                        <li>{{ task.getDescription }} due by {{ task.getDueDate | date("m/d/Y") }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <p><a href="/categories/{{ category.getId }}/edit">Edit this category</a></p>

            <p><a href="/">Home</a></p>

            <h4>Add a task</h4>

            <form action='/tasks' method='post'>
                <div class="form-group">
                    <input id='category_id' name='category_id' type='hidden' value='{{ category.getId }}'>
                    <label for='description'>Task Description</label>
                    <input id='description' name='description' type='text'>
                </div>
                <div class="form-group">
                    <label for='due_date'>Due By:</label>
                    <input id='due_date' name='due_date' type='date'>
                </div>
                <button type='submit' class="btn btn-success">Add task</button>
            </form>
            <form action='/delete_tasks' method='post'>
                <div class="form-group">
                    <button type='submit' class='btn btn-danger'>Delete Tasks</button>
                </div>
            </form>
            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
